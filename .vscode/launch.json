{
    // Utilisez IntelliSense pour en savoir plus sur les attributs possibles.
    // Pointez pour afficher la description des attributs existants.
    // Pour plus d'informations, visitez : https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug pbp-tunnel client with config file",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/pbp-tunnel",
            "args": [
                "client",
                "--debug=true"
            ],
            "env": {
                "PBP_TUNNEL_CONFIG": "${workspaceFolder}/.dev/config-client.json"
            },
            "showLog": true,
            "trace": "verbose",
            "logOutput": "rpc",
            "postDebugTask": "Clean debug files",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug pbp-tunnel server with config file",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/pbp-tunnel",
            "args": [
                "server"
            ],
            "env": {
                "PBP_TUNNEL_CONFIG": "${workspaceFolder}/.dev/config-server.json"
            },
            "showLog": true,
            "trace": "verbose",
            "logOutput": "rpc",
            "postDebugTask": "Clean debug files",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug Current File",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}",
            "cwd": "${workspaceFolder}"
        }
    ]
}